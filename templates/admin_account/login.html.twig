{% extends 'base.html.twig' %}

{% block title %}Hello AdminAccountController!
{% endblock %}

{% block body %}

			<div class="col-md-4 offset-md-4 mt-5">
				<div class="card bg-light mt-5">
					<div class="card-header">


						<h4 class="card-title">
							<i class="fas fa-lock"></i>
							Connexion Ã  l'administration
						</h4>
					</div>
					<div class="card-body">


						{% if hasError %}
							<div class="alert alert-warning">
								<p>Votre login ou votre mot de passe est incorrect</p>
							</div>
						{% endif %}
						<form method="POST">
							<div class="form-group my-3">
								<label for="username">Email</label><input type="text" id="email" name="_username" class="form-control" placeholder="Adresse email..." required value="{{username}}"></div>
							<div class="form-group my-3">
								<label for="password">Password</label><input type="password" class="form-control" placeholder="Mot de passe..." name="_password" id="password"></div>
							<div class="form-group">
								<button type="submit" class="btn btn-primary my-3">
									<i class="fas fa-lock-open"></i>
									Connexion</button>
								<a href="{{ path('app_home')}}" class="btn btn-link">
									<i class="fas fa-arrow-circle-left"></i>
									Retour au site
								</a>
							</div>
						</form>

					</div>
				</div>

			</div>

{% endblock %}
