<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>{% block title %}WIP{% endblock %}</title>
    <link rel="icon" href="data:image/svg+xml,<svg xmlns='http://www.w3.org/2000/svg' viewBox='0 0 128 128'><text y='1.2em' font-size='96'>⚫️</text></svg>">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet"> 
    
    {# {{ render_esi(path('ch_cookie_consent.show')) }}
    {{ render_esi(path('ch_cookie_consent.show_if_cookie_consent_not_set')) }} #}

    {{ encore_entry_link_tags('app') }}
    {% block stylesheets %}{% endblock %}
            {{ encore_entry_link_tags('app') }}
</head>
<body>
    {# {% include 'partials/header.html.twig' %} #}

    {% for label, messages in app.flashes %}
        <div class="container">
            <div class="alert alert-{{ label }}">
                {% for message in messages %}
                    <p>{{ message | raw }}</p>
                {% endfor %}
            </div>
        </div>
    {% endfor %}

    {% block body %}{% endblock %}

    

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js"></script>
	<script src="https://kit.fontawesome.com/61eae04d09.js" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/show-hide-password@1.2.0/dist/show-hide-password.min.js"></script>


    <script>
        // Script pour fermer le menu burger
        var navbar = document.querySelector('.navbar');
        var navbarToggler = document.querySelector('.navbar-toggler');

        navbarToggler.addEventListener('click', function() {
            navbar.classList.toggle('show');
        });
    </script>
</body>
</html>
